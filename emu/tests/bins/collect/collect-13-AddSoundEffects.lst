    953  fba2							; PrepScoreForDisplay
    954  fba2							; --------------
    955  fba2							; Converts the high and low nybbles of the RAM variables Score and Score+1
    956  fba2							; into offsets into the digit graphics so the values can be displayed.
    957  fba2							; Each digit uses 5 bytes of data for the graphics.  For the low nybble we need
    958  fba2							; to multiply by 5, but the 6507 does not have a multiply feature.  It can,
    959  fba2							; however, shift the bits in a byte left, which is the same as a multiply by 2.
    960  fba2							; Using this, we can get multiply a # by 5 like this:
    961  fba2							;	 # * 5 = (# * 2 * 2) + #
    962  fba2							; The value in the upper nybble is already times 16, so we need to divide it.
    963  fba2							; The 6507 can shift the bits the right, which is the same as divide by 2.
    964  fba2							;	 (# / 16) * 5 = (# / 2 / 2) + (# / 2 / 2 / 2 / 2)
    965  fba2							;===============================================================================
    966  fba2				   PrepScoreForDisplay
    967  fba2		       a2 01		      ldx	#1	; use X as the loop counter for PSFDloop
    968  fba4				   PSFDloop
    969  fba4		       b5 80		      lda	Score,x	; LoaD A with Score+1(first pass) or Score(second pass)
    970  fba6		       29 0f		      and	#$0F	; remove the tens digit
    971  fba8		       85 88		      sta	Temp	; Store A into Temp
    972  fbaa		       0a		      asl		; Accumulator Shift Left (# * 2)
    973  fbab		       0a		      asl		; Accumulator Shift Left (# * 4)
    974  fbac		       65 88		      adc	Temp	; ADd with Carry value in Temp (# * 5)
    975  fbae		       95 82		      sta	DigitOnes,x	; STore A in DigitOnes+1(first pass) or DigitOnes(second pass)
    976  fbb0		       b5 80		      lda	Score,x	; LoaD A with Score+1(first pass) or Score(second pass)
    977  fbb2		       29 f0		      and	#$F0	; remove the ones digit
    978  fbb4		       4a		      lsr		; Logical Shift Right (# / 2)
    979  fbb5		       4a		      lsr		; Logical Shift Right (# / 4)
    980  fbb6		       85 88		      sta	Temp	; Store A into Temp
    981  fbb8		       4a		      lsr		; Logical Shift Right (# / 8)
    982  fbb9		       4a		      lsr		; Logical Shift Right (# / 16)
    983  fbba		       65 88		      adc	Temp	; ADd with Carry value in Temp ((# / 16) * 5)
    984  fbbc		       95 84		      sta	DigitTens,x	; STore A in DigitTens+1(first pass) or DigitTens(second pass)
    985  fbbe		       ca		      dex		; DEcrement X by 1
    986  fbbf		       10 e3		      bpl	PSFDloop	; Branch PLus (positive) to PSFDloop
    987  fbc1		       60		      rts		; ReTurn from Subroutine
